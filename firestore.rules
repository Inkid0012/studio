rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can be read by any authenticated user, but only written to by the user themselves.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Conversations can only be accessed by participants.
    match /conversations/{conversationId} {
      allow read, write: if request.auth.uid in resource.data.participantIds;

      // Messages can only be accessed by participants of the parent conversation.
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }

    // Calls can be read or written to only by the sender or receiver.
    match /calls/{callId} {
      allow read, write: if request.auth.uid == resource.data.from || request.auth.uid == resource.data.to;
    }
  }
}
