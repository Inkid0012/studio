
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (for discover, profile view, etc.)
      allow read: if request.auth != null;
      // Only the user themselves can create, update, or delete their own profile
      allow create, update, delete: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to list users (needed for Discover page)
    match /users/{userId=**} {
        allow list: if request.auth != null;
    }

    match /calls/{callId} {
      // Any authenticated user can create a call document
      allow create: if request.auth != null;
      
      // Only participants of the call can read it or update its status
      allow read, update, delete: if request.auth.uid == resource.data.from || request.auth.uid == resource.data.to;
    }

    match /conversations/{conversationId} {
      // Allow a user to access a conversation only if they are a participant
      allow get, list, update, delete: if request.auth.uid in resource.data.participantIds;

      // Allow a user to create a conversation if they are one of the participants
      allow create: if request.auth.uid in request.resource.data.participantIds;
      
      // Rules for messages within a conversation
      match /messages/{messageId} {
        // Allow read access to messages only for participants of the parent conversation
        allow read: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
        
        // Allow creating a message if the user is a participant
        allow create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
  }
}
