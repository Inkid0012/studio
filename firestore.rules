rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any profile, but only write to their own.
    // This allows discover, profile pages, and chat lists to work.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read, write, or delete a conversation document
    // only if their UID is in the participantIds array.
    match /conversations/{conversationId} {
      allow read, write, delete: if request.auth != null && request.auth.uid in resource.data.participantIds;

      // A user can create a conversation only if their UID is in the
      // new document's participantIds array.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;

      // Messages can be read or created by anyone who is a participant
      // of the parent conversation.
      match /messages/{messageId} {
        allow read, create: if request.auth != null &&
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }
  }
}
