rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // A user can be read by any authenticated user.
    // A user can create, update, or delete their own document.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // A conversation can be read, updated, or deleted only by its participants.
    // A conversation can be created by a user if they are one of the participants.
    match /conversations/{conversationId} {
      allow get, update, delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
    }

    // Messages can be read or created only by participants of the parent conversation.
    match /conversations/{conversationId}/messages/{messageId} {
      allow list, get: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
    }
  }
}
