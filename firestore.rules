
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Any authenticated user can read any user's profile.
      // This is necessary for the Discover and Profile pages.
      allow read: if request.auth != null;
      
      // A user can only write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /conversations/{conversationId} {
      // A user can only access a conversation if they are a participant.
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;

      // Rules for messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }

    match /calls/{callId} {
      // Any authenticated user can create, read, or write to a call document.
      // More restrictive rules could be added if needed (e.g., only participants).
      allow read, write, create: if request.auth != null;
    }
  }
}
